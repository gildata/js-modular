{
    "name": "A browser action with a popup that changes the page color",
    "description": "Change the current page color",
    "version": "1.0",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_title": "Set this page's color.", // overwrite name
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}